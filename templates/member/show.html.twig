{% extends 'article/base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ member.fullName }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ member.fonction }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ member.description }}</td>
            </tr>
            <tr>
                <th>Social_linkOne</th>
                <td>{{ member.socialLinkOne }}</td>
            </tr>
            <tr>
                <th>Social_linkTwo</th>
                <td>{{ member.socialLinkTwo }}</td>
            </tr>
            <tr>
                <th>Social_linkThree</th>
                <td>{{ member.socialLinkThree }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ member.imageUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_member_index') }}">Retour a la liste</a>

    <a href="{{ path('app_member_edit', {'id': member.id}) }}">Editer</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
